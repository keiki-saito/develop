<!DOCTYPE html>
<html>
  <head>
    <title>Myapp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
     <script src="https://kit.fontawesome.com/484e6509e8.js" crossorigin="anonymous"></script>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
   <% flash.each do |key, value| %>
    <div class="alert alert-<%= key %>" role="alert"><%= value %></div>
  <% end %>

  
 <header class="navbar is-fixed-top"role="navigation" aria-lable="dropdown navigation">
  <div class="container">
    <div class="navbar-brand ">
      <%=link_to "Netflix",root_path ,id: "logo",class:"navbar-item title-logo"%>
    </div>

    <div id="navbarBasicExample" class="navbar-menu">
    <div class="navbar-end">
      <div class="navbar-item has-dropdown is-hoverable ">
        <a class="navbar-link">
        映画
        </a>
        <div class="navbar-dropdown is-boxed is-right">
          <a class="navbar-item">
            国内映画
          </a>
          <a class="navbar-item">
            海外映画
          </a>
        </div>
      </div>

    <div class="navbar-item has-dropdown is-hoverable">
        <a class="navbar-link">
        アニメ
        </a>
        <div class="navbar-dropdown is-boxed is-right">
          <a class="navbar-item">
            コメディアニメ
          </a>
          <a class="navbar-item">
            大人向けアニメ
          </a>
        </div>
      </div>

      <div class="navbar-item has-dropdown is-hoverable ">
        <a class="navbar-link">
        ドラマ
        </a>
        <div class="navbar-dropdown is-boxed is-right">
          <a class="navbar-item">
            国内ドラマ
          </a>
          <a class="navbar-item">
            韓国ドラマ
          </a>
        </div>
      </div>
      </div>
       
      </div>
  </div>

  <%if logged_in?%>
    <%=link_to "ログアウト" ,logout_path,method: :delete ,class: "button-custom button btn--shadow mt-2 mr-5"%>
  <%end%>
 
 </header>
  <main>
    <%= yield %>
  </main>


<script>
  $(function(){
    $(".alert").fadeOut(5000);
  });
</script>

  </body>
</html>
